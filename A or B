#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	int T;
	cin>>T;
	
	while(T--){
	int X,Y;
	cin >> X >> Y;
	    int A = 500 - 2*X + 1000-4*(X+Y);
	    int B = 1000 - 4*Y + 500-2*(X+Y);
	    if (A > B)
	    {
	        cout << 500-2*X + 1000-4*(X+Y) << endl;
	    }
	    else
	    {
	        cout << 500-2*(X+Y) + 1000-4*Y << endl;
	    }
	}

}
